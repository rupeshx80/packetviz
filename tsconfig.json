{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "types/**/*"]
}
